<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.hustudentunionpresidentvotingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HUStudentUnionPresidentVotingapp">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.HUStudentUnionPresidentVotingapp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.HUStudentUnionPresidentVotingapp.NoActionBar" />

        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.HUStudentUnionPresidentVotingapp.NoActionBar" />

        <activity
            android:name=".VotingActivity"
            android:exported="false"
            android:theme="@style/Theme.HUStudentUnionPresidentVotingapp.NoActionBar" />

        <activity
            android:name=".ResultsActivity"
            android:exported="false"
            android:theme="@style/Theme.HUStudentUnionPresidentVotingapp.NoActionBar" />

        <activity
            android:name=".AdminActivity"
            android:exported="false"
            android:theme="@style/Theme.HUStudentUnionPresidentVotingapp.NoActionBar" />

        <activity
            android:name=".AdminDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.HUStudentUnionPresidentVotingapp.NoActionBar" />

    </application>

</manifest>